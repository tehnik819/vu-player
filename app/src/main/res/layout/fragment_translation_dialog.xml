<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/translation_dialog_source_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/translation_dialog_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/translation_dialog_source_text"
            android:minHeight="@dimen/translation_dialog_result_min_height"
            />

        <ProgressBar
            android:id="@+id/translation_dialog_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/translation_dialog_source_text"
            android:minHeight="@dimen/translation_dialog_result_min_height"
            />

    </RelativeLayout>

</ScrollView>